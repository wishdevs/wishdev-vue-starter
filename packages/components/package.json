{
  "name": "@wishdevs/vue-components",
  "version": "0.0.1",
  "private": false,
  "author": "wishdev",
  "homepage": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev-server": "pnpm --parallel vite",
    "dev-types": "vue-tsc  --noEmit -p tsconfig.app.json --watch",
    "build": "pnpm run build-lib && pnpm run build-types",
    "build-lib": "vite build",
    "build-types": "vue-tsc --emitDeclarationOnly --declaration -p tsconfig.app.json",
    "lint": "eslint 'src/**/*.{ts,vue}'",
    "clean": "rimraf dist node_modules"
  },
  "dependencies": {
    "@wishdevs/vue-components": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "vite": "^4.1.1",
    "vitest": "^0.28.4",
    "@vitejs/plugin-vue": "^4.0.0",
    "vue-tsc": "^1.1.2",
    "@vue/tsconfig": "^0.1.3"
  }
}
